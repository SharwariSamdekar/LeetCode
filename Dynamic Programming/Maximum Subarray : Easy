class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int curmax = 0, maxsofar = nums[0];
        int n = nums.size();
        
        for(int  i = 0; i < n; i++){
            curmax = max(curmax+nums[i], nums[i]);
            maxsofar = max(maxsofar,curmax);
        }
        
        return maxsofar;
    }
};
